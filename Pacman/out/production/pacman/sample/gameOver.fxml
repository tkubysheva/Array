<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerGameOver">
   <children>
      <ImageView fitHeight="204.0" fitWidth="456.0" layoutX="72.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/gameOver.png" />
         </image>
      </ImageView>
      <Button fx:id="nextGameButton" layoutX="81.0" layoutY="291.0" mnemonicParsing="false" text="NEXT LEVEL" textFill="#52a74f">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Button>
      <Button fx:id="exitGameButton" cancelButton="true" layoutX="271.0" layoutY="291.0" mnemonicParsing="false" text="EXIT" textFill="#e52828">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Button>
      <Button fx:id="repeatGameButton" layoutX="411.0" layoutY="291.0" mnemonicParsing="false" text="REPEAT" textFill="#3961b2">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Button>
      <TextArea fx:id="nameField" layoutX="162.0" layoutY="228.0" prefHeight="37.0" prefWidth="218.0" promptText="Enter your name here to save it" />
      <Button fx:id="nameWrited" layoutX="384.0" layoutY="227.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="53.0" text="OK!">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label layoutX="210.0" layoutY="173.0" text="Your score:">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </Label>
      <Label fx:id="scoreLabel" layoutX="350.0" layoutY="173.0" text="0">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
